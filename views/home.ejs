<!DOCTYPE html>
<html lang="en">

    <%- include('partials/head.ejs',{ pageName :  "Twitter home" }) %>

<body>

    <%- include('partials/sideNavBar.ejs')%>
    <div class="homeMainContent">
    <section>
        <div>
            <h2 class="title">Home</h2>
        </div>
    </section>
    <form method="POST" action="/home">
        <div>
            <label for="content">Tweet</label>
            <input id="content" type="text" name="content" placeholder="What's happening?">
        </div>
        <div>
            <label for="image">Image</label>
            <input id="image" type="text" name="image" placeholder="tweets.png">
        </div>
        <input type="submit" value="Tweet">
    </form>

    <main class="container">
        <div>
            <div>
                <% for(let idx=0; idx < tweets.length; idx++){ %>
                    <% const tweet=tweets[idx] %>
                    <%= tweet.content %>
                    <div>
                        <img class="card-image" src="<%=tweet.image%>" alt="Placeholder image" />
                    </div>

                <% } %>
            </div>
        </div>
    </main>
</div>
</body>

</html>