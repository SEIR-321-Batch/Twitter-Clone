<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head.ejs',{ pageName : "Twitter home" }) %> <%-
  include('./partials/nav.ejs', {page: 'nav'}) %>
  <body class="home-body">
    <%- include('partials/sideNavBar.ejs')%>
    <div class="homeMainContent">
      <main class="twitter-home-container">
      <section>
        <div>
          <h2 id="title">Home</h2>
        </div>
      </section>
      <form method="POST" action="/home">
        <div>


            <label for="content">
                
                    <img class="profile-image" src="<%= currentUser.profilePic %>" alt="Placeholder image" />
                


            </label>
            <input id="content" type="text" name="content" placeholder="What's happening?">




        </div>
        <div>
          <input id="image" type="text" name="image" placeholder="tweets.png" />
          <input type="submit" value="Tweet" class="tweetButton" />
        </div>
      </form>

      <main class="container">
        <div>
          <div>
            <% for(let idx=0; idx < tweets.length; idx++){ %> <% const
            tweet=tweets[idx] %> <%= tweet.content %>
            <div>
              <img
                class="card-image"
                src="<%=tweet.image%>"
                alt="Placeholder image"
              />
            </div>

            <% } %>
          </div>
        </div>
      </main>
    </main>
    </div>
  </body>
</html>
