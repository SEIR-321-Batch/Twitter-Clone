<!DOCTYPE html>
<html lang="en">
<%- include('partials/head.ejs',{ pageName : "Twitter Likes" }) %>
  <%- include('./partials/nav.ejs', {page: 'nav' }) %>
    <link rel="stylesheet" href="/tweet/tweet.css" />
    <link rel="stylesheet" href="/styles/main.css" />

    <body class="home-body profile">
      <div class="likesContent">
        <section>
          <div class="likes-display">
            <h2 class="bookmarks-title">Bookmarks</h2>
  
            <h5>@<%= currentUser.username %>
            </h5>
          </div>
        </section>
        <div class="homeMainContent">
          <div>
            <%- include('partials/sideNavBar.ejs')%>
          </div>
          <main class="twitter-home-container">
            <main class="container">
              <div>
                <div>
                  <% for(let idx=tweets.length -1; idx>= 0; idx--){ %> <% const tweet=tweets[idx] %>
                      <div class="tweetPic-user">
                        <img class="profile-image" src="<%=tweet.user.profilePic%>" />
                        <p class="username">
                          @<%=tweet.user.username%>
                        </p>
                        <span> | </span>
                          <small>
                            <%= new Date(tweet.createdAt).toLocaleString() %>
                          </small>
                      </div>
                      <p class="tweet-text">
                        <%= tweet.content %>
                      </p>
                      <div class="image-container">
                        <% if(tweet.image !=='' ){%>
                          <img class="card-image" src="<%=tweet.image%>" />
                          <%}%>
                      </div>
                      <div class="home-like-retweet-buttons">
                        <a class="comment-button" href=""><i class="fa-solid fa-comment"></i></a>
                        <input class="like" type="button" value="â™¡" />
                        <a class="retweet" href=""><i class="fa-solid fa-retweet"></i></a>
                      </div>
                      <% } %>
                </div>
              </div>
            </main>
          </main>
        </div>
      </div>
    </body>

</html>