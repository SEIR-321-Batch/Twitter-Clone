<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head.ejs',{ pageName : "Twitter home" }) %> <%-
  include('./partials/nav.ejs', {page: 'nav'}) %>
  <body>
    <%- include('partials/sideNavBar.ejs')%>
    <div class="homeMainContent">


<form action = "/auth/<%= id %>?_method=PUT" method = "POST">
    <h1>Edit Profile</h1>
    <div>
        <label>User name</label>
        <input type="text" name="username" value="<%= currentUser.username%>"/>
    </div>


    <div>
        <label>Profile picture</label>
        <input type="text" name="profilePic" value="<%= currentUser.profilePic%>"/>
    </div>
    <div>
        <input type="submit" value="Edit Profile: <%= currentUser.username%>"/>
    </div>
</form>

<form action = "/auth/<%=id%>/deleteprofile?_method=PUT" method = "POST">
    <input type="submit" value="Delete profile picture"/>

</form>
</div>
</body>
</html>