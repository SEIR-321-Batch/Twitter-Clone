<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head.ejs',{ pageName : "Twitter home" }) %> <%-
  include('./partials/nav.ejs', {page: 'nav'}) %>
  <body>
    <%- include('partials/sideNavBar.ejs')%>
    <div class="home-body profile">

<form action = "/auth/<%= id %>?_method=PUT" method = "POST">
    <div class="profiletitle"><h1>Edit Profile</h1></div>
    <br>
    <label for="content">
        <img class="profile-image" src="<%= currentUser.profilePic %>" alt="Placeholder image" />
      </label>
    <br>
    <br>
    <div>
        <label>User name</label>
        <input type="text" name="username" value="<%= currentUser.username%>"/>
    </div>

<br>
    <div>
        <label>Profile picture</label>
        <input type="text" name="profilePic" value="<%= currentUser.profilePic%>"/>
    </div>
    
    <br>
    <div>
        <input class='buttonprofile'type="submit" value="Edit Profile: <%= currentUser.username%>"/>
    </div>
</form>

